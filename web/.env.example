# Database Configuration
DATABASE_URL=postgresql://southerns_user:southerns_password@postgres:5432/southerns_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# SRS Configuration
SRS_API_URL=http://srs:8080/api/v1
SRS_RTMP_URL=rtmp://localhost:1935
SRS_HLS_URL=http://localhost:8080

# Application Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=1073741824
ALLOWED_FILE_TYPES=video/mp4,video/avi,video/mov,video/wmv,video/flv

# Stream Configuration
DEFAULT_STREAM_QUALITY=720p
MAX_STREAM_DURATION=14400
STREAM_THUMBNAIL_INTERVAL=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
PLATFORM_CONTACT_EMAIL=support@southernsshortfilms.com

# Subscription & Waiver Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
WAIVER_EXPIRY_DAYS=365

# Social Login (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CDN Configuration (optional)
CDN_URL=https://your-cdn-domain.com
USE_CDN=false

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90